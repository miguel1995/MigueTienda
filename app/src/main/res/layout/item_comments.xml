<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0.5dp"
    app:cardElevation="4dp"
    android:layout_marginTop="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/tvItemCommentUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usuario"
                android:layout_gravity="left|top"
                android:textSize="20dp"
                android:textColor="@color/design_default_color_primary_dark"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/tvItemCommentScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5/5"
                android:gravity="center|top"
                android:textSize="20dp"
                android:textColor="@color/design_default_color_primary_dark"
                android:textStyle="bold"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvItemCommentComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla vel ipsum ut ligula consectetur porttitor. Maecenas sem quam, ultrices ac lacinia et, blandit sed tortor "
                android:gravity="left|top"
                android:textSize="20dp"
                android:textColor="@color/design_default_color_primary_dark"

                />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>